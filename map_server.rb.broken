  path, query_string = full_path.split('?', 2)
  
  # Read headers
  headers = {}
  while (line = client.gets.chomp) != ''
    key, value = line.split(': ', 2)
    headers[key.downcase] = value
  end
  
  # Read request body if it exists
  body = ''
